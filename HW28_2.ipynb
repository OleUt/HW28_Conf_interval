   "source": [
    "import math\n",
    "\n",
    "n = 100\n",
    "m = 40\n",
    "t = 1.96       # conf. probability = 0.95\n",
    "\n",
    "a = t * math.sqrt(m*(n-m)/n + t**2/4)\n",
    "lower = 1/(t**2+n) * (m + t**2/2 - a)\n",
    "upper = 1/(t**2+n) * (m + t**2/2 + a)\n",
    "print('probability =', m/n)\n",
    "print('95% conf. interval of probability:', lower, upper)"
   ]
  }
